.home-nav
  z-index:9999
  position: fixed;
  width:100%;
  box-shadow: 0 8px 16px 5px rgba(80,35,54,.15);

  & > div:last-child a
    color:#fff;
    cursor:pointer;

.isLogin
  padding-bottom:40px;
  position :relative;
  & img
    display :inline-block;
    width:30px;
    height:30px;
    border-radius :50%;
    position :relative;
    top:10px;


.transition-box
  width:122px;
  height:192px;
  background:#fff;
  position :absolute;
  right:0;
  border-radius: 0 0 15px 15px;
  overflow :hidden;
  line-height:48px;
  text-align :center;
  box-shadow: 0 8px 16px 5px rgba(80,35,54,.15);

  & li a
    margin:0 !important;
    padding:10px 20px;
    color:#000 !important;
  & li:hover
    background:linear-gradient(to right, #fb825d,#ff5955);

    & a
      margin:0 !important;
      color:#fff !important;

.nav-container-bottom
  height: 100px;

  & > div:first-child
    width: 375px;
    height: 100px;
    float:left;
    display: flex;
    align-items center;
    justify-content :flex-end;

    & .navBar-logo
      width: 215px;
      height: 64px;
      background: #ddd;

  & > div:last-child
    height: 100px;
    line-height: 100px;
    margin-right:245px;
    float:right;

    & a
      margin-left:40px;
    .login-btn
      width:120px;
      height:48px;
      display:inline-block;
      text-align:center;
      line-height :48px;
      border-radius:30px;
      border:1px solid #ddd;

    .login-btn:hover{
      border:1px solid transparent;
    }


.home-nav-other
  z-index:9999
  background:#fff;
  box-shadow: 0 8px 16px 5px rgba(80,35,54,.15);
  & > div:last-child a
    color:#000;
    cursor:pointer;

