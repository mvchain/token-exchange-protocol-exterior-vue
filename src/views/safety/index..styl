#safetyNav
  width:1420px;
  margin:0 auto;
  position:absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
  padding-top:180px;

  & .safety-title
    height:72px;
    display:flex;
    border-radius:15px;
    justify-content :space-between;
    background:#fff;

    & .safety-name
      flex:1;
      border:1px solid #ddd;
      text-align :center;
      color:#666;
      line-height :72px;
      cursor:pointer;
      background:#fff;
      transition box-shadow 0.5s;

    & .selected-title
      box-shadow: 0 5px 12px 3px rgba(80,35,54,.15);
      border:1px solid #ff9374;
      z-index:999;
      color:#ff9374;

  & .safety-pane
    width:1420px;
    height:553px;
    background:#fff;
    border-radius:20px;
    margin:0 auto;
    margin-top:20px;
    overflow :auto;
    box-shadow: 0 8px 16px 5px rgba(80,35,54,.15);

    & div.safety-pane-item
      padding:30px;
      overflow :auto;

    & div.safety-pane-item
      & .safety-pane-item-left
        float:left;
        display :flex;
        flex-direction :column;
        text-align :center;
        align-items :center;
        width:215px;

        & span
          width:150px;
          height:48px;
          text-align :center;
          line-height 48px;
          border-radius :25px;
          border:1px solid #ff7974;
          margin-bottom:30px;
          color:#ff7974;
          cursor:pointer;

      & .safety-pane-item-right
        float:right;
        width:1129px;

      & .safety-pane-item-modify
          float:right;
          width:1129px;
          height:493px;
          display :flex;
          justify-content :center;
          align-items :center;

          & .safety-pane-item-modify-con
            width:330px;
            height:350px;
            margin-left:-75px;

            & .safety-pane-item-modify-input
              margin-bottom:20px;
              & input
                width:100%;
                height:48px;
                border:1px solid #ff7974;
                padding-left:20px;
                outline none;
                border-radius 10px;

            & .safety-pane-item-modify-btn
              text-align :center;
              margin-top:60px;
            & span
                display :inline-block;
                width:150px;

.selected-btn
  transform: scale(1.05);
  background:linear-gradient(to right, #ff9975,#ff7874) !important;
  border:0;
  color:#fff !important;
  box-shadow: 0 8px 16px 0 rgba(80,35,54,.15);
