#safetyNav
  width:1420px;
  margin:0 auto;
  position:absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
  padding-top:200px;

  & .safety-title
    height:72px;
    display:flex;
    border-radius:15px;
    justify-content :space-between;
    background:#fff;

    & .safety-name
      flex:1;
      border:1px solid #ddd;
      text-align :center;
      color:#666;
      line-height :72px;
      cursor:pointer;
      background:#fff;
      transition box-shadow 0.5s;

    & .selected-title
      box-shadow: 0 0 10px 2px rgba(255,127,50,.7);
      z-index:999;
      color:orange;

  & .safety-pane
    width:1420px;
    height:553px;
    background:#fff;
    border-radius:20px;
    margin:0 auto;
    margin-top:20px;
    box-shadow: 0 8px 16px 5px rgba(80,35,54,.15);
