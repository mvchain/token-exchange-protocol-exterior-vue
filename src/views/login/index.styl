.login-con
  height: 800px;
  padding-top: 100px;
  display: flex;
  justify-content: center;
  align-items: center;
  background: url(../../assets/img/login-back.png) no-repeat center bottom;
  background-size: 100% 100%;

  .login-container,
  .registered-container
    width:660px;
    height:540px;
    background:#fff;
    border-radius:30px;
    box-shadow: 0 8px 16px 5px rgba(80,35,54,.15);
    padding:50px;

    .login-container-title,
    .registered-container-title
      text-align :center;
      color:#666;
      font-weight :900;
      font-size:30px;

    .login-container-form,
    .registered-container-form
      width:410px;
      margin:0 auto;
      margin-top:40px;
      & > ul > li
        margin-top:20px;
      & > ul > li:nth-child(1),
      & > ul > li:nth-child(2),
      & > ul > li:nth-child(3)
        position:relative;

        & span
          position :absolute;
          top:23px;
          left:12px;
          color:#5f84e9;
      & input
        border:1px solid #91aeff;
        width:412px;
        height:60px;
        border-radius:5px;
        outline :none
        padding-left:20px;

      & .login-container-form-validate,
      & .registered-container-form-validate
        & input
          width:200px;
          margin-right:10px;

        & b
          display :inline-block;
          width:195px;
          height:60px;
          text-align:center;
          line-height :60px;
          background:#ddd;

      & > ul > li:nth-child(4)
        & > div
          display :flex;

          & span
            flex:1
            cursor:pointer;
          & span:last-child
            text-align :right;

            & b
              color:#5f84e9;

      & > ul > li:nth-child(5),
      & > ul > li:nth-child(8)
        text-align:center;
        margin-top:30px;
        & span
          display :inline-block;
          width:151px;
          height:54px;
          color:#fff;
          background:#5f84e9;
          text-align :center;
          line-height :54px;
          border-radius :20px;
          cursor:pointer;

  .registered-container
    height:720px;
