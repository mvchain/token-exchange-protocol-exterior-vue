.info-con

  & .info-container
    overflow-x:hidden;
    background:url(../../assets/img/info-back.png) no-repeat top center;

  & .info-container-body
    margin:0 auto;

    & .info-container-title
      display flex;
      justify-content :space-between;

      & div:first-child
        & span
          cursor:pointer;
      & div:last-child
        text-align right;

        & span
          display :inline-block;
          background:#fff;
          text-align center;
          cursor:pointer;

    & .info-container-middle
      & > div
        background:#fff;
        box-shadow: 0 8px 36px 2px rgba(0,0,0,.1);

      & > div:first-child
        float:left;
        position:relative;
        overflow: hidden;

        & .info-working
          font-weight:900;
          background:#6488ff;
          display :inline-block;
          text-align center;
          position :absolute;
          top:0;
          left:-5px;
          border-radius:15px;
          font-style:normal;
          color:#fff;

        & .info-big-img
          float:left;
          background:#ddd;
          overflow:hidden;

          & img
            width:100%;
            height:100%;

        & .info-participate
          position :absolute;
          right:0;
          top:0;

        & .info-right
          float:right;
          height:100%;

          & > div:first-child
            width:100%;
            & span:first-child
              font-weight:900;

          & > ul
            text-align :center;

            & span
              font-weight:900;

          & .info-now
            position :absolute;

            & span
              display:inline-block;


      & > div:last-child
        float:right;
        overflow-y:auto;

        & > div:first-child
          overflow :hidden;
          border-radius:50%;

          & img
            width:100%;
            height:100%;
            text-align :center;

        & .info-people
          text-align :center;
          margin-bottom:10px;
          font-size:14px;
          color:#666;

    & .info-container-bottom
      & > div
        background:#fff;
        box-shadow: 0 8px 36px 2px rgba(0,0,0,.1);
        border-radius:20px;
      & > div:first-child
        float:left;

        & .info-container-bottom-title
          font-weight:900;

      & > div:last-child
        float:right;
        text-align center;

        & > ul
          & > li:nth-child(1) span
            font-size:18px;
            color:#666;

          & > li:nth-child(2)
            margin: 25px 0 25px 0;

          & > li:nth-child(3)
            margin: 25px 0 25px 0;

          & > li:nth-child(4) a
            display :inline-block;
            width:150px;
            height:48px;

          & > li:nth-child(5)
            margin: 25px 0 12px 0;

          & > li:nth-child(6) a
            color:#696dff;
            cursor:pointer;


    & .info-container-bottom-des
      width:100%;
      overflow:hidden;
      & img
        width:100%;
        height:100%;

  & .info-dialog
    & .dialog-title
      text-align :center;
      color:#333;
    & .dialog-label
      float:left;
      text-align:right;

    & .dialog-context
      float:left;

      & .info-prompt
        position :absolute;
        left:0;
        color:#9b9b9b;

      & input
        border:1px solid orange;
        outline :none;
    & .dialog-submit
      text-align :center;
      &  span
        display :inline-block;


.dialog-confirm
  & .dialog-confirm-title
      text-align center;
      font-size:20px;
      padding:20px 0;

  & .dialog-footer
    padding:40px 0;



.el-progress__text
  font-size:18px !important;
  font-weight:900;
.btn-opcity
