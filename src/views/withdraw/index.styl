
.withdraw-con
  height: 493px;
  margin: 0 0 0 212px;

  & .withdraw-from
    width: 485px;
    padding: 0 70px;

    & .withdraw-from-title
      font-size: 24px;
      color: #666;
      font-weight: 900;
      text-align: center;
      margin-bottom:20px;

    & .withdraw-from-body
      & > div
        margin-top: 18px;

      & input
        width: 100%;
        height: 40px;
        border: 1px solid #ff7974;
        padding-left: 20px;
        outline none;
        border-radius 5px;

      & .el-form-item
        margin-bottom:18px;

      & .withdraw-from-body-instructions
        & li
          font-size: 14px;
          color: #666;
          padding: 3px 0;
          height:20px;
          line-height:20px;

      & .withdraw-from-body-sub
        text-align: center;
        & button
          width: 150px;
          height: 48px;
          line-height :24px;
          margin-top:14px;
