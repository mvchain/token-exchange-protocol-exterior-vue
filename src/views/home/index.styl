.home-carousel
  height: 815px;
  position relative
  overflow :hidden;
  .banner-img
    position: absolute;
    transition: opacity 2s ease-in-out;
    opacity: 0;
    width:100%;

  .banner-img-hover
    opacity: 1;

  .carousel-circle
    position: absolute;
    top: 80%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 800;

    & li
      display inline-block;
      width: 20px;
      height: 20px;
      background: rgba(255,255,255,0.5);
      border-radius: 20px;
      margin-right: 15px;
      transition width 1s
      cursor: pointer

    & li.banner-hover-icon
      width: 82px;
      background: rgba(255,255,255,0.5);

.project-bottom
  background:url('../../assets/img/back-img-btm.png') no-repeat bottom center;
  background-size:88% ;

  .project-list
    width:1420px;
    margin:0 auto;
    padding-bottom:50px;

    & > div.project-title
      margin:80px 0 60px 0;

      & > div:first-child
        float:left;
        font-size:34px;
        font-weight:900;
        color:#666;
      & > div:last-child
        float:right;

    & > .project-pane-icon
      text-align :center;
      & li
        display inline-block;
        width: 20px;
        height: 20px;
        background: linear-gradient(to right, #b98eff, #5e88ff);
        border-radius: 20px;
        margin-right: 15px;
        transition width 1s
        cursor: pointer

      & li.banner-hover-icon
        width: 82px;
        background: linear-gradient(to right, #b98eff, #5e88ff);

    & > .project-common-problem
      width:900px;
      height:680px;
      overflow :auto;
      margin:0 auto;
      background :#fff;
      box-shadow: 0 8px 16px 5px rgba(80,35,54,.15);
      border-radius:15px;
      margin-top:100px;
      padding:65px;

      & > .project-common-problem-title
        text-align :center;
        font-size:34px;
        font-weight:900;
        color:#666;
        margin-bottom:50px;

      & > .project-common-problem-more
        margin-top:64px;
        text-align :center;

  .project-contact
    margin-top:130px;

    .project-contact-txt
      text-align center;
      font-size:34px;
      font-weight:900;
      color:#fff;

    .project-contact-icon
      margin-top:80px;
      & > ul
        display :flex;
        justify-content :center;
        align-items :center;

        & > li
          margin-left:30px;
          cursor:pointer;

    .project-contact-log
      width:1136px;
      border-top:1px solid #ddd;
      margin:0 auto;
      margin-top:60px;
      padding:100px 0 80px 0;
      line-height :72px;

      & > div:first-child
        width:144px;
        height:72px;
        background:url(../../assets/img/login-w.png) no-repeat;
        background-size:100% 100%;
        float:left;

      & > div:last-child
        float:right;
        color:#fff;

    & .ewm-img
      position :relative;

      & img
        position absolute;
        top:-200px;
        left:-60px;




